<Page x:Class="Camera_GUI.IOHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Camera_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="IOGUI - Home">

    <Grid Margin="0" Background="#FFDAE3F3">
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Padding" Value="5,2"/>
            </Style>
        </Grid.Resources>

        <Rectangle Height="32" Fill="#568BB3" Name="LEDColour" 
                   GotFocus = "ToggleIndicator"
                   Canvas.Top="20" Canvas.Left="20" StrokeThickness="3" 
                   Margin="10,10,10,0" VerticalAlignment="Top" />
        <TextBlock Text="LED OFF" FontSize="16" Foreground="#FFDEAD" Name="LEDText"
                   Margin="15,15,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"></TextBlock>

        <Button Click = "YClicked" Height="30" Width="60" 
                Margin="0,0,0,10" VerticalAlignment="Bottom">
            Level (Y)</Button>
        <Button Click = "XClicked" Height="30" Width="60" Margin="0,0,0,45" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom">
            Level (X)</Button>
    </Grid>
</Page>
