<Page x:Class="Camera_GUI.IOHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Camera_GUI"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="IOGUI - Home">

    <Grid Margin="0" Background="#FFDAE3F3">
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Padding" Value="5,2"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Angle X -->
        <Rectangle Height="30" Width="250" Fill="LightGoldenrodYellow" Name="AngleXBack" StrokeThickness="3" 
                   Margin="10,52,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" />

        <TextBlock FontSize="16" Foreground="DarkOrange" Name="AngleXText"
                   Text="X Value"
                   Margin="10,52,0,0" TextWrapping="Wrap" TextAlignment="Center"
                   VerticalAlignment="Top" HorizontalAlignment="Left" 
                   Grid.ColumnSpan="2" Height="30" Width="250"></TextBlock>

        <Button Click = "XClicked" Margin="265,52,0,0" 
                Grid.ColumnSpan="2" Width="75" Height="30" 
                HorizontalAlignment="Left" VerticalAlignment="Top">Level (X)</Button>

        <!-- Angle Y -->
        <Rectangle Height="30" Width="250" Fill="LightPink" Name="AngleYBack" StrokeThickness="3" 
                   Margin="10,87,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" />

        <TextBlock FontSize="16" Foreground="DarkOrchid" Name="AngleYText"
                   Text="Y Value" 
                   Margin="10,87,0,0" TextWrapping="Wrap" TextAlignment="Center"
                   VerticalAlignment="Top" HorizontalAlignment="Left"
                   Grid.ColumnSpan="2" Height="30" Width="250"></TextBlock>

        <Button Click = "YClicked" 
                Margin="265,87,0,0" Grid.ColumnSpan="2" Width="75" Height="30"
                HorizontalAlignment="Left" VerticalAlignment="Top">Level (Y)</Button>

        <!-- LED Indicator -->
        <Rectangle Height="32" Fill="#568BB3" Name="LEDColour" StrokeThickness="3" 
                   Margin="10,10,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" />

        <TextBlock FontSize="16" Foreground="#FFDEAD" Name="LEDText"
                   Text="LED"
                   Margin="408,15,392,0" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.ColumnSpan="2">

        </TextBlock>

    </Grid>
</Page>
